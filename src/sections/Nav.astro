    }
    
    #middle-bar {
      opacity: 1;
    }
  
    #bottom-bar {
      transform-origin: bottom left;
    }
  
   
    #burger-icon.open #top-bar {
      transform: translateY(-4px) translateX(8px) rotate(45deg);
